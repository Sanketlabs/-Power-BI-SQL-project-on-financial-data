âœ… 6. Good Loan vs Bad Loan
ðŸ“Œ Good Loan
-- Percentage
SELECT 
  COUNT(CASE WHEN loan_status IN ('FULLY PAID', 'CURRENT') THEN id END) * 100.0 / COUNT(id) 
  AS Good_Loan_Percentage
FROM Bank_loan_Data;

-- Count
SELECT COUNT(id) AS Good_Loan_Applications FROM Bank_loan_Data
WHERE loan_status IN ('FULLY PAID', 'CURRENT');

-- Funded Amount
SELECT SUM(loan_amount) AS Good_Loan_Funded_Amount FROM Bank_loan_Data
WHERE loan_status IN ('FULLY PAID', 'CURRENT');

-- Total Received
SELECT SUM(total_payment) AS Good_Loan_Total_Received_Amount FROM Bank_loan_Data
WHERE loan_status IN ('FULLY PAID', 'CURRENT');



ðŸ“Œ Bad Loan
1.Bad Loan Application Percentage
-- Percentage
SELECT 
  COUNT(CASE WHEN loan_status = 'CHARGED OFF' THEN id END) * 100.0 / COUNT(id) 
  AS Bad_Loan_Percentage
FROM Bank_loan_Data;

-- Count
SELECT COUNT(id) AS Total_Bad_Loan_Application FROM Bank_loan_Data
WHERE loan_status = 'CHARGED OFF';

-- Funded Amount
SELECT SUM(loan_amount) AS Bad_Loan_Funded_Amount FROM Bank_loan_Data
WHERE loan_status = 'CHARGED OFF';

-- Total Received
SELECT SUM(total_payment) AS Bad_Loan_Total_Received_Amount FROM Bank_loan_Data
WHERE loan_status = 'CHARGED OFF';
-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
âœ… 7. Loan Status Grid View
SELECT loan_status,
       COUNT(id) AS Loan_Account,
       SUM(loan_amount) AS Total_Funded_Amount,
       SUM(total_payment) AS Total_Payment_Received,
       AVG(int_rate * 100) AS Avg_Interest_Rate,
       AVG(dti) AS Avg_DTI
FROM Bank_loan_Data
GROUP BY loan_status;
-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
âœ… 8. MTD Loan Status Breakdown
SELECT loan_status,
       SUM(loan_amount) AS MTD_Funded_Amount,
       SUM(total_payment) AS MTD_Amount_Received
FROM Bank_loan_Data
WHERE MONTH(issue_date) = 12
GROUP BY loan_status;
-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

ðŸ“Š Overview & Analysis Queries
ðŸ“Œ Monthly Trends
SELECT 
  MONTH(issue_date) AS Month_Number,
  DATENAME(MONTH, issue_date) AS Month_Name,
  COUNT(id) AS Total_Application,
  SUM(loan_amount) AS Funded_Amount,
  SUM(total_payment) AS Total_Received_Payment
FROM Bank_loan_Data
GROUP BY MONTH(issue_date), DATENAME(MONTH, issue_date)
ORDER BY MONTH(issue_date);

ðŸ“Œ Regional Analysis
SELECT TOP 10 
  address_state,
  COUNT(id) AS Total_Application,
  SUM(loan_amount) AS Funded_Amount,
  SUM(total_payment) AS Total_Received_Payment
FROM Bank_loan_Data
GROUP BY address_state
ORDER BY Total_Application DESC;

ðŸ“Œ Loan Term Analysis
SELECT 
  term,
  COUNT(id) AS Total_Application,
  SUM(loan_amount) AS Funded_Amount,
  SUM(total_payment) AS Total_Received_Payment
FROM Bank_loan_Data
GROUP BY term;


ðŸ“Œ Employee Length Analysis
SELECT 
  emp_length,
  COUNT(id) AS Total_Application,
  SUM(loan_amount) AS Funded_Amount,
  SUM(total_payment) AS Total_Received_Payment
FROM Bank_loan_Data
GROUP BY emp_length;

ðŸ“Œ Loan Purpose Breakdown
SELECT 
  purpose,
  COUNT(id) AS Total_Application,
  SUM(loan_amount) AS Funded_Amount,
  SUM(total_payment) AS Total_Received_Payment
FROM Bank_loan_Data
GROUP BY purpose;

ðŸ“Œ Home Ownership Analysis
SELECT 
  home_ownership,
  COUNT(id) AS Total_Application,
  SUM(loan_amount) AS Funded_Amount,
  SUM(total_payment) AS Total_Received_Payment
FROM Bank_loan_Data
GROUP BY home_ownership;
